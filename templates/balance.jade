#minimum-right-title

#minimum-right-content(style="padding-top:15px;")
  h3= "Welche Boulders braucht es"

  div(style="display: none;")
    table
      tbody
        - each number in actualDistribution
          tr
            td
              = number

  div(id="chart")
  script(src='/balance.js')

  h4= "Legende"

  ul(style="list-style: none;")
    li
      span(style="display: inline-block; width:35px;")
        img(src="/images/actual_num_boulders.png", style="float:left")
      = "so viele Boulders "
      b(style="color: #ba0000;")
        ="hat"
      = " es von dieser Farbe"
    li
      span(style="display: inline-block; width:35px;")
        img(src="/images/expected_num_boulders.png", style="float:left")
      = "so viele Boulders "
      b(style="color: #ba0000;")
        ="sollte"
      = " es von dieser Farbe haben"
    li
      span(style="display: inline-block; width:35px;")
        img(src="/images/max_boulders.png", style="float:left")
      b(style="color: #ba0000;")
        = "maximale "
      = " Anzahl Boulders einer Farbe"
      br
      span(style="display: inline-block; width:35px;")
      = "(blauer Balken sollte nie ueber diese Grenze gehen)"


  h5= "Beispiele"

  p(style="font-size:14px;")= "Es hat zu wenige:"
  img(src="/images/need_yellow.png")
  p(style="font-size:14px; color: #33cc00; font-weight: bold;")= "&rArr; gelbe Boulders schrauben"

  hr

  p(style="font-size:14px;")= "Es hat zu viele:"
  img(src="/images/no_more_blue.png")
  p(style="font-size:14px; color: red; font-weight: bold;")= "&rArr; Schraubstopp fuer blaue Boulders"

  hr

  p(style="font-size:14px;")= "Es hat zu viele:"
  img(src="/images/too_many_blue.png")
  p(style="font-size:14px; color: red; font-weight: bold;")= "&rArr; Blaue Boulders rausschrauben"

  hr

  p(style="font-size:14px;")= "Genau richtig:"
  img(src="/images/perfect_yellow.png")
  p(style="font-size:14px; color: #ff7900; font-weight: bold;")= "&rArr; Wenn sonst keine Farbe untervertreten, alle Farben ok"

